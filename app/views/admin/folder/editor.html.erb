<div class="tabs">
    <ul>
        <li style="margin-left: 1px" id="main_tab" class="tabHeaderActive"><a href="#" onClick="tab.toggleTab('main_tab')"><span>Geral</span></a></li>
        <li id="folders_tab"><a href="javascript:void(0)" onClick="tab.toggleTab('folders_tab')" ><span>Folders</span></a></li>
        <li id="pages_tab"><a href="javascript:void(0)" onclick="tab.toggleTab('pages_tab')"><span>Pages</span></a></li>
    </ul>
    </div>
    <div id="tabscontent">
        <div id="main_tab_content" class="tabContent" style="">
				<div>
					<%if @folder.id then%>
						<%if @folder.homepage %>
							<%= render :partial => 'edit_homepage' %>
						<% else %>
							<%= render :partial => 'edit' %>
						<% end %>
					<% else %>
						<%= render :partial => 'new'%>
					<% end %>
				</div>
        </div>

        <div id="folders_tab_content" class="tabContent" style="display:none;">
            <br /><div><%= render :partial => 'folders' %></div>
        </div>

        <div id="pages_tab_content" class="tabContent" style="display:none;">
            <br /><div><%= render :partial => 'pages' %></div>
        </div>
    </div>
</div>